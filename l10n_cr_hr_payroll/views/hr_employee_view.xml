<odoo>

    <record id="view_employee_form_inherit_extension" model="ir.ui.view">
      <field name="name">view.employee.form.inherit.extension</field>
      <field name="model">hr.employee</field>
      <field name="inherit_id" ref="hr.view_employee_form"/>
      <field name="arch" type="xml">

        <xpath expr="//field[@name='medic_exam']" position="before">
            <field name='initial_date'/>
            <field name='vacation_days'/>
            <field name='retirement_plan'/>
        </xpath>

        <xpath expr="//field[@name='marital']" position="after" >
            <field name='marital_exoneration'/>
        </xpath>

        <xpath expr="//field[@name='children']" position="after">
            <field name='children_exoneration'/>
        </xpath>
            
      </field>
    </record>

    <record id="view_contract_form_inherit_extension" model="ir.ui.view">
      <field name="name">view.hr.contract.form.inherit.extension</field>
      <field name="model">hr.contract</field>
      <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
      <field name="arch" type="xml">

        <xpath expr="//field[@name='struct_id']" position="after">
            <field name='currency_id'/>
        </xpath>

      </field>
    </record>

</odoo>
